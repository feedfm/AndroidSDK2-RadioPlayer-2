<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:background="@android:color/black"
    >


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        >

        <TextView
            android:id="@+id/notification_track_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:lines="1"
            android:text="this is the track title!"
            />

        <TextView
            android:id="@+id/notification_track_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="this is the track artist!"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/notification_track_release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="this is the track album!"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="12dp"
            />


    </LinearLayout>



</LinearLayout>