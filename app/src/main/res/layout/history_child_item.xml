<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/history_dark_background"
    android:padding="20dp"
    android:paddingTop="25dp"
    android:paddingBottom="25dp"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/play_history_title_name"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:text="Life on Mars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/play_history_title_name"
        android:layout_toRightOf="@id/play_history_title_name"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:text="â€¢"
        android:id="@+id/dot"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toEndOf="@id/dot"
        android:layout_toRightOf="@id/dot"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="David Bowie"
        android:textColor="@android:color/white"
        android:id="@+id/play_history_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>



<LinearLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/history_child_like"
        android:background="#00000000"
        android:tint="@color/mild_grey"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/like_unfilled_black"
    />

    <ImageButton
        android:id="@+id/history_child_dislike"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:background="#00000000"
        android:tint="@color/mild_grey"
        android:src="@drawable/dislike_unfilled_black"
        android:layout_width="25dp"
        android:scaleType="fitXY"
        android:layout_height="25dp" />

</LinearLayout>

</LinearLayout>